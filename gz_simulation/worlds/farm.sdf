<?xml version="1.0" ?>
<sdf version="1.8">
  <world name="farm_world">
    <physics name="1ms" type="ignored">
      <max_step_size>0.001</max_step_size>
      <real_time_factor>1.0</real_time_factor>
    </physics>
    <plugin filename="gz-sim-physics-system" name="gz::sim::systems::Physics" />
    <plugin filename="gz-sim-user-commands-system" name="gz::sim::systems::UserCommands" />
    <plugin filename="gz-sim-scene-broadcaster-system" name="gz::sim::systems::SceneBroadcaster" />

    <!-- Bright Sun -->
    <light type="directional" name="sun">
      <cast_shadows>true</cast_shadows>
      <pose>0 0 20 0 0 0</pose>
      <diffuse>1.0 1.0 1.0 1</diffuse>
      <specular>0.5 0.5 0.5 1</specular>
      <attenuation>
        <range>1000</range>
        <constant>0.9</constant>
        <linear>0.01</linear>
        <quadratic>0.001</quadratic>
      </attenuation>
      <direction>-0.5 0.1 -0.9</direction>
    </light>

    <!-- Ground Plane with field.png texture, rotated by 90 degrees -->
    <model name="ground_plane">
      <static>true</static>
      <pose>0 0 0 0 0 1.5708</pose>
      <link name="link">
        <collision name="collision">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>20 20</size>
            </plane>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>20 20</size>
            </plane>
          </geometry>
          <material>
            <ambient>1 1 1 1</ambient>
            <diffuse>1 1 1 1</diffuse>
            <specular>0 0 0 1</specular>
            <pbr>
              <metal>
                <albedo_map>field.png</albedo_map>
              </metal>
            </pbr>
          </material>
        </visual>
      </link>
    </model>

    <!-- Explorer R2 Robot positioned at the requested pose -->
    <include>
      <name>ecoweeder</name>
      <uri>https://fuel.gazebosim.org/1.0/jeevankoiri/models/EXPLORER_R2_VISUALS_ONLY</uri>
      <pose>9.6532 4.6353 0.0094 0 0 1.6871</pose>
      <plugin filename="gz-sim-diff-drive-system" name="gz::sim::systems::DiffDrive">
        <left_joint>left_wheel_joint</left_joint>
        <right_joint>right_wheel_joint</right_joint>
        <wheel_separation>1.2</wheel_separation>
        <wheel_radius>0.3</wheel_radius>
        <topic>/cmd_vel</topic>
        <odom_topic>/odom</odom_topic>
        <tf_topic>/tf</tf_topic>
        <frame_id>odom</frame_id>
        <child_frame_id>ecoweeder/base_link</child_frame_id>
      </plugin>
      <plugin filename="gz-sim-joint-state-publisher-system" name="gz::sim::systems::JointStatePublisher">
        <topic>/world/farm_world/model/ecoweeder/joint_state</topic>
      </plugin>
    </include>

    <!-- Crop Rows (Adjusted for new robot start position) -->
    <model name="crop_r1_1"><static>true</static><pose>-7 -7 0.1 0 0 0</pose><link name="l"><visual name="v"><geometry><cylinder><radius>0.05</radius><length>0.3</length></cylinder></geometry><material><ambient>0 0.5 0 1</ambient><diffuse>0 0.8 0 1</diffuse></material></visual></link></model>
    <model name="crop_r1_2"><static>true</static><pose>-5 -7 0.1 0 0 0</pose><link name="l"><visual name="v"><geometry><cylinder><radius>0.05</radius><length>0.3</length></cylinder></geometry><material><ambient>0 0.5 0 1</ambient><diffuse>0 0.8 0 1</diffuse></material></visual></link></model>
    <model name="crop_r1_3"><static>true</static><pose>-3 -7 0.1 0 0 0</pose><link name="l"><visual name="v"><geometry><cylinder><radius>0.05</radius><length>0.3</length></cylinder></geometry><material><ambient>0 0.5 0 1</ambient><diffuse>0 0.8 0 1</diffuse></material></visual></link></model>
    
    <!-- Weeds -->
    <model name="weed_1"><static>true</static><pose>9.0 6.0 0.05 0 0 0</pose><link name="l"><visual name="v"><geometry><cylinder><radius>0.1</radius><length>0.1</length></cylinder></geometry><material><ambient>1 0 0 1</ambient><diffuse>1 0 0 1</diffuse></material></visual></link></model>
    <model name="weed_2"><static>true</static><pose>8.0 8.0 0.05 0 0 0</pose><link name="l"><visual name="v"><geometry><cylinder><radius>0.1</radius><length>0.1</length></cylinder></geometry><material><ambient>1 0 0 1</ambient><diffuse>1 0 0 1</diffuse></material></visual></link></model>

  </world>
</sdf>
